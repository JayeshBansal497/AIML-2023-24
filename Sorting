        "#include<iostream>\n",
        "using namespace std;\n",
        "int main()\n",
        "{\n",
        "    int arr[4],i=0;\n",
        "    do\n",
        "    {\n",
        "        cin>>arr[i];\n",
        "        if(arr[i]<arr[i-1])\n",
        "        {\n",
        "           arr[i]=arr[i]+arr[i-1];\n",
        "           arr[i-1]=arr[i]-arr[i-1];\n",
        "           arr[i]=arr[i]-arr[i-1];\n",
        "        }\n",
        "              i++;\n",
        "    }\n",
        "    while(i<4);\n",
        "    for(int i=0;i<4;i++)\n",
        "    cout<<arr[i]<<endl;\n",
        "}"
